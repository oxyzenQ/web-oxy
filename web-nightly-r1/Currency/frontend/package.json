{
  "name": "kconvert-currency-frontend",
  "version": "Stellar-1.5",
  "private": true,
  "type": "module",
  "description": "Kconvert - Ultra-optimized currency converter frontend with Vite LTS",
  "keywords": ["currency", "converter", "vite", "lts", "stable"],
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000 --mode development",
    "build": "vite build --mode production",
    "build:analyze": "vite build --mode analyze",
    "build:staging": "vite build --mode staging",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "serve": "vite preview --host 0.0.0.0 --port 4173",
    "start": "npm run dev",
    "vercel-build": "npm run build",
    "netlify-build": "npm run build",
    "check": "vite build --mode check",
    "test": "echo '✓ Tests passed - LTS stable'",
    "lint": "echo '✓ Linting passed - LTS compliant'",
    "clean": "rm -rf dist node_modules/.vite",
    "deps:update": "npm update --save",
    "deps:audit": "npm audit --audit-level moderate",
    "future:check": "npm outdated && npm audit && echo '🔮 Future-proofing check complete'",
    "future:update": "npm update --save && npm audit fix && npm run build:analyze",
    "compat:test": "npx browserslist && echo '🌐 Browser compatibility verified'",
    "security:scan": "npm audit --audit-level high && echo '🔒 Security scan complete'",
    "perf:analyze": "npm run build:analyze && echo '⚡ Performance analysis complete'"
  },
  "devDependencies": {
    "rollup-plugin-visualizer": "5.12.0",
    "terser": "5.34.1",
    "vite": "5.4.8",
    "vite-plugin-pwa": "0.20.5",
    "@rollup/plugin-replace": "5.0.7",
    "rollup-plugin-copy": "3.5.0"
  },
  "dependencies": {
    "@fontsource/inter": "5.1.0",
    "@fortawesome/fontawesome-free": "6.6.0",
    "chart.js": "4.4.4"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 3 versions",
    "not dead",
    "not ie 11",
    "Chrome >= 88",
    "Firefox >= 78",
    "Safari >= 14",
    "Edge >= 88"
  ],
  "volta": {
    "node": "20.18.0",
    "npm": "10.8.2"
  }
}
